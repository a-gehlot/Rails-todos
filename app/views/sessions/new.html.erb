<h1 class="login-header">Log in!</h1>
<%= form_with scope: :session, local: true, url: session_path do |form| %>
    <div>
        <%= form.label :email %>
            <%= form.email_field :email, required: true %>
    </div>
    <div>
        <%= form.label :password %>
            <%= form.password_field :password, required: true %>
    </div>
    <%= form.submit "Sign in" %>
    <div>
        <h1>Not a user?</h1>
        <%= link_to "Sign Up", new_user_path, class: "sign-up-btn" %>
    </div>
<% end %>