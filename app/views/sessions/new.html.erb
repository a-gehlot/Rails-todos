<h1 class="login-header">Log in!</h1>
<%= form_with scope: :session, local: true, url: session_path do |form| %>
    <div>
        <%= form.label :email %>
            <%= form.email_field :email, required: true %>
    </div>
    <div>
        <%= form.label :password %>
            <%= form.password_field :password, required: true %>
    </div>
    <%= form.submit "Sign in" %>
<% end %>