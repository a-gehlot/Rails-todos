<h1 class="signup-header">Sign up!</h1>
<% flash.each do |k, v| %>
    <div id="<%= k %>">
        <%= v %>
    </div>
<% end %>

<%= form_with model: @user, local: true, url: users_path do |form| %>
    <div>
        <%= form.label :email %>
        <%= form.email_field :email, required: true %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password, required: true %>
    </div>
    <%= form.submit "Sign up" %>
<% end %>